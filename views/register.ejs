<!DOCTYPE html>
<html lang="en">
  <%- include("./components/header.ejs", { title: "Home" }) %>
  <body class="bg-neutral-900">
    <div id="modal-container"></div>
    <main class="bg-neutral-900 w-full max-w-md mx-auto p-6">
      <div
        class="mt-7 border border-neutral-700 rounded-xl shadow-sm bg-neutral-800"
      >
        <div class="p-4 sm:p-7">
          <div class="text-left">
            <h1 class="block text-2xl font-bold text-ctp-pink font-calsans">
              Register to TransitCDN
            </h1>
          </div>

          <div class="mt-5">
            <div class="grid gap-y-4">
              <!-- Form Group -->
              <div>
                <label
                  for="name"
                  class="block text-sm mb-2 font-calsans text-white"
                  >Username</label
                >
                <div class="relative">
                  <input
                    type="name"
                    id="userName"
                    name="name"
                    placeholder="Tactical"
                    class="py-3 px-4 block w-full 0 rounded-lg text-sm disabled:opacity-50 disabled:pointer-events-none bg-neutral-700/65 hover:bg-neutral-700/50 focus:outline focus:outline-ctp-pink focus:trasition-all focus:outline:duration-150 text-white"
                    required
                    aria-describedby="usr-error"
                  />
                  <div
                    class="hidden absolute inset-y-0 end-0 pointer-events-none pe-3"
                  >
                    <svg
                      class="size-5 text-red-500"
                      width="16"
                      height="16"
                      fill="currentColor"
                      viewBox="0 0 16 16"
                      aria-hidden="true"
                    >
                      <path
                        d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
                      />
                    </svg>
                  </div>
                </div>
                <p class="hidden text-xs text-red-600 mt-2" id="email-error">
                  Please include a valid email address so we can get back to you
                </p>
              </div>
              <!-- End Form Group -->

                            <!-- Form Group -->
                            <div>
                              <label
                                for="email"
                                class="block text-sm mb-2 font-calsans text-white"
                                >Email</label
                              >
                              <div class="relative">
                                <input
                                  type="email"
                                  id="email"
                                  name="email"
                                  placeholder="foobar@foodbar.org"
                                  class="py-3 px-4 block w-full 0 rounded-lg text-sm disabled:opacity-50 disabled:pointer-events-none bg-neutral-700/65 hover:bg-neutral-700/50 focus:outline focus:outline-ctp-pink focus:trasition-all focus:outline:duration-150 text-white"
                                  required
                                  aria-describedby="usr-error"
                                />
                                <div
                                  class="hidden absolute inset-y-0 end-0 pointer-events-none pe-3"
                                >
                                  <svg
                                    class="size-5 text-red-500"
                                    width="16"
                                    height="16"
                                    fill="currentColor"
                                    viewBox="0 0 16 16"
                                    aria-hidden="true"
                                  >
                                    <path
                                      d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"
                                    />
                                  </svg>
                                </div>
                              </div>
                              <p class="hidden text-xs text-red-600 mt-2" id="email-error">
                                Please include a valid email address so we can get back to you
                              </p>
                            </div>

              <!-- Form Group -->
              <div>
                <label
                  for="userPassword"
                  class="block text-sm mb-2 font-calsans text-white"
                  >Password</label
                >
                <div class="relative">
                  <!-- Strong Password -->
<div class="max-w-sm">
  <div class="flex">
    <div class="relative flex-1">
      <input type="password" id="password" class="py-3 px-4 block w-full 0 rounded-lg text-sm disabled:opacity-50 disabled:pointer-events-none bg-neutral-700/65 hover:bg-neutral-700/50 focus:outline focus:outline-ctp-pink focus:trasition-all focus:outline:duration-150 text-white" placeholder="Enter password">
      <div id="hs-strong-password-popover" class="hidden absolute z-10 w-full bg-neutral-800 shadow-md rounded-lg p-4">
        <div id="hs-strong-password-in-popover" data-hs-strong-password='{
            "target": "#password",
            "hints": "#hs-strong-password-popover",
            "stripClasses": "hs-strong-password:opacity-100 hs-strong-password-accepted:bg-teal-500 h-2 flex-auto rounded-full bg-blue-500 opacity-50 mx-1",
            "mode": "popover"
          }' class="flex mt-2 -mx-1">
        </div>

        <h4 class="mt-3 text-sm font-semibold text-gray-800">
          Your password must contain:
        </h4>

        <ul class="space-y-1 text-sm text-gray-500">
          <li data-hs-strong-password-hints-rule-text="min-length" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-2">
            <span class="hidden" data-check="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span data-uncheck="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
              </svg>
            </span>
            Minimum number of characters is 6.
          </li>
          <li data-hs-strong-password-hints-rule-text="lowercase" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-2">
            <span class="hidden" data-check="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span data-uncheck="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
              </svg>
            </span>
            Should contain lowercase.
          </li>
          <li data-hs-strong-password-hints-rule-text="uppercase" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-2">
            <span class="hidden" data-check="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span data-uncheck="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
              </svg>
            </span>
            Should contain uppercase.
          </li>
          <li data-hs-strong-password-hints-rule-text="numbers" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-2">
            <span class="hidden" data-check="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span data-uncheck="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
              </svg>
            </span>
            Should contain numbers.
          </li>
          <li data-hs-strong-password-hints-rule-text="special-characters" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-2">
            <span class="hidden" data-check="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
            <span data-uncheck="">
              <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
              </svg>
            </span>
            Should contain special characters.
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- End Strong Password -->
                </div>
              </div>
              <!-- End Form Group -->

              <button
                type="submit"
                onclick="register()"
                class="w-full py-3 px-4 mt-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-ctp-pink/5 text-neutral-300 bg-neutral-700/65 hover:bg-neutral-700/60 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1"
              >
                Sign Up
              </button>
            </div>
            <!-- End Form -->
          </div>
        </div>
      </div>
    </main>
    <script>
      const username = document.getElementById("userName");
      const password = document.getElementById("password");
      const email = document.getElementById("email");

      function register() {
        axios
          .post("/api/register", {
            username: username.value,
            password: btoa(password.value)
              .toString()
              .replace("==", "<%= encryptKEY %>"),
            email: email.value
          })
          .then((response) => {
            loadModal(response.data.type, response.data.message, true);
            if (response.data.type == "success") {
              setTimeout(() => {
                window.location = "/login";
              }, 2000);
            }
          });
      }
    </script>
  </body>
</html>
